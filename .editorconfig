# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

[*]
trim_trailing_whitespace = false


# python
[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.js]
indent_style = tab
indent_size = 2
insert_final_newline = false


[*.html]
indent_style = tab
indent_size = 2


[*.{scss,css}]
indent_style = tab
indent_size = 2
insert_final_newline = false
